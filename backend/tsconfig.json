{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "rootDir": "./",
        "outDir": "./build",
        "esModuleInterop": true,
        "strict": true,
        "paths": {
            "*": [
                "./node_modules/*"
            ]
        },
        "resolveJsonModule": true,
        "baseUrl": "./src"
    },
    "include": [
        "src/**/*"
    ]
}